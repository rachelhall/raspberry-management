---
import { facebook, spotify, instagram } from "../lib/icons";
import { Image } from "astro:assets";
import type { Artist } from "../lib/types/artist";

interface Props {
  artist: Artist;
}
const { artist } = Astro.props;
---

<div class="social-row">
  <a href={artist.instagram} target="_blank">
    <Image alt="Instagram" src={instagram} /></a
  >
  <a href={artist.spotify} target="_blank"
    ><Image alt="Spotify" src={spotify} /></a
  >
</div>

<style>
  .social-row {
    display: flex;
    gap: 1rem;
    margin: 1rem 0;
  }
</style>
