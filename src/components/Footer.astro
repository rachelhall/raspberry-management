<style>
  footer {
    background-color: var(--plum);
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: -10rem 0 0;
    padding: 6rem 0 2rem;
    width: 100%;
  }
  .footnote-container {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .inner-container {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
  }

  @media screen and (max-width: 480px) {
    footer {
      padding: 0;
      margin: 0;
      align-self: flex-end;
    }
    .footnote {
      margin-top: 1rem;
      font-size: 0.75rem;
      font-weight: 100;
    }
    .inner-container {
      align-items: flex-end;
      flex-direction: column-reverse;
    }
  }
</style>
