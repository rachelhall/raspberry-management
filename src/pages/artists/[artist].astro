---
import Heading from "../../components/Heading.astro";
import Socials from "../../components/Socials.astro";
import Layout from "../../layouts/Layout.astro";

import { artistData } from "../../data/artists";
import InfoBox from "../../components/InfoBox.astro";
import Hero from "../../components/Hero.astro";
import { cleanURL } from "../../lib/utils/cleanUrl";
import ArtistContact from "../../components/ArtistContact.astro";
import type { Artist } from "../../lib/types/artist";


export function getStaticPaths() {
  return artistData.map((artist) => ({
    params: {
      artist: artist.slug,
    },
    props: {
      data: artistData.find((a) => a.slug === artist.slug),
    },
  }));
}

const data = Astro.props.data as Artist;
const heroSrc = data?.bannerSrc ?? data?.src;
---

<Layout title="Raspberry Management">
  <div class="artist-detail">
    {heroSrc && <Hero src={heroSrc} alt=`Photo of ${data?.name}` />}
    <InfoBox color="white" width="truncated">
      <div>
        <h1 class="band-name">{data?.name}</h1>
        {
          data?.website && (
            <a class="link" href={data?.website} target="_blank">
              {cleanURL(data?.website)}
            </a>
          )
        }
      </div>
      {data && <Socials artist={data} />}
      <div class="band-info">
        <div>
          <div>
            <Heading>ARTIST BIO</Heading>
            {data?.bio.split("\n\n").map((paragraph, index) => (
            <p>{paragraph}</p>
          ))}
          </div>
        </div>
        <div>

      <ArtistContact artist={data}/>
      </div>
    </InfoBox>
  </div>

  <style lang="scss">

    iframe {
      border: none;
    }

    .artist-detail {
      margin: auto;
    }
    .details {
      max-width: 800px;
      margin: 3rem auto;
    }

    .band-info {
      display: flex;
      flex: 1;
      gap: 6rem;
    }

    .band-name {
      color: var(--black);
      text-transform: uppercase;
    }
    h2 {
      font-size: 1.5rem;
    }
    .text {
      color: var(--black);
    }

    @media screen and (max-width: 480px) {
      .band-info {
        flex-direction: column;
        gap: 2rem;
      }
    }
  </style>
</Layout>
